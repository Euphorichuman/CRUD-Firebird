<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>Identificación</td>
            <td>Nombre</td>
            <td>Id del padre</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].id %></td>
                <td><%= data[i].nom %></td>
                <td><%= data[i].hijode %></td>
                <td>
                  <a href="/updatehijo/<%= data[i].id %>" class="btn btn-primary">Editar</a>
                  <a href="/deletehijo/<%= data[i].id %>" class="btn btn-danger">Borrar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% include partials/_footer %>
